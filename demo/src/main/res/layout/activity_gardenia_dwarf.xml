<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dp"
    tools:context="com.android.tonyvu.sc.demo.Gardenia_dwarf">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/collection_image_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/gardenia"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/t1"
                android:layout_marginTop="10dp"
                android:text="@string/gardenia"
                android:textSize="25dp"
                android:textColor="#000"
                android:textStyle="normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/t2"
                android:layout_marginTop="10dp"
                android:text="@string/more"
                android:textSize="20dp"
                android:textColor="#FF1493"
                android:drawableLeft="@drawable/ic_arrow_downward_black_24dp"/>

            <ImageView
                android:id="@+id/collection_image_background1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/gardeniadwarf"/>

            <ImageView
                android:id="@+id/collection_image_background2"
                android:layout_width="wrap_content"
                android:layout_height="380dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/gardenias"/>

            <ImageView
                android:id="@+id/collection_image_background3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/anantadwarf"/>

        </LinearLayout>

    </ScrollView>







</RelativeLayout>